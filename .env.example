# Aethelgard Saga Python - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's in .gitignore)

# ========================================
# OpenAI API
# ========================================
OPENAI_API_KEY=sk-proj-...your_openai_api_key_here

# ========================================
# API Authentication (4 keys for 4 systems)
# ========================================
# Research Portal → Quality Checker
RESEARCH_PORTAL_API_KEY=rp_...generate_secure_random_key

# QuestionForge → Quality Checker
QUESTIONFORGE_API_KEY=qf_...generate_secure_random_key

# Backend → Quality Checker
BACKEND_API_KEY=be_...generate_secure_random_key

# AXIS AI → Backend
AXIS_API_KEY=ax_...generate_secure_random_key

# ========================================
# LangSmith Telemetry (Optional)
# ========================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__...your_langsmith_api_key_here
LANGCHAIN_PROJECT=aethelgard-quality-checker

# ========================================
# Database (Supabase)
# ========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# ========================================
# Quality Checker Settings
# ========================================
# Pass threshold (v2.0: 85, was 70 in v1.0)
QUALITY_PASS_THRESHOLD=85

# Quality gates
COVERAGE_THRESHOLD=0.65
CITATION_DENSITY_THRESHOLD=1.0

# Cache TTL (idempotency)
CACHE_TTL_HOURS=24

# Rate limiting
MAX_BATCH_SIZE=100

# ========================================
# Research Portal Settings
# ========================================
# Model selection
CONTENT_GENERATION_MODEL=gpt-4o-latest
TEMPERATURE=0.7
MAX_TOKENS=2000

# RAG settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5

# ========================================
# Backend API Settings
# ========================================
# FastAPI
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=False

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/aethelgard.log

# ========================================
# Development
# ========================================
ENVIRONMENT=development
# Options: development, staging, production

# ========================================
# Security Notes
# ========================================
# 1. Generate secure random keys using:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 2. Never commit this file with real values to git
#
# 3. Store production secrets in secure vault (AWS Secrets Manager, etc.)
#
# 4. Rotate API keys regularly
#
# 5. Use different keys for dev/staging/production environments
